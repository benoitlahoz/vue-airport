{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/runtime/**/*"]
}
